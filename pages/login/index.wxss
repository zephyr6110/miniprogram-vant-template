/* pages/login/index.wxss */
page {
  background: #f1f1f1;
}

.container {
  width: 100%;
  height: 100vh;
  padding-bottom: 0;
}

.login-form {
  display: block;
  width: 610rpx;
  margin: 300rpx auto 0;
}

.login-form .form-item {
  display: block;
  margin-top: 24rpx;
  border-radius: 22rpx;
  overflow: hidden;
}

.login-form .form-item-inner {
  padding: 24rpx 40rpx;
}

.login-form .mini-btn {
  height: auto;
  padding: 0;
  color: #1c1c1c;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  background: transparent;
  line-height: 48rpx;
}

.login-form .mini-btn::after {
  display: none;
}

.login-form .mini-btn[disabled] {
  background-color: transparent !important;
  opacity: 0.5;
}

.login-form .btn-wrap {
  margin-top: 60rpx;
}
